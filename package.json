{
  "name": "rest-express",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "NODE_ENV=development tsx server/index.ts",
    "build:frontend": "cd client && npx vite build && cd ..",
    "build:backend": "npx esbuild server/index.ts --platform=node --bundle --format=esm --outdir=dist-backend --external:@babel/preset-typescript --external:lightningcss",
    "build": "npm run build:frontend && npm run build:backend",
    "start": "NODE_ENV=production node dist-backend/index.js",
    "check": "tsc",
    "db:push": "drizzle-kit push"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@neondatabase/serverless": "^0.10.4",
    "connect-pg-simple": "^10.0.0",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.39.1",
    "drizzle-zod": "^0.8.3",
    "esbuild": "^0.25.9",
    "express": "^4.21.2",
    "express-session": "^1.18.2",
    "multer": "^2.0.2",
    "nanoid": "^5.1.5",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "vite": "^5.4.19",
    "ws": "^8.18.3",
    "zod": "^3.24.2",
    "@vitejs/plugin-react": "^5.0.1",
    "tailwindcss": "^4.1.12",
    "@tailwindcss/postcss": "^4.1.12",
    "@tailwindcss/typography": "^0.5.16",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/express": "4.17.21",
    "@types/node": "20.16.11",
    "tsx": "^4.19.1",
    "typescript": "5.6.3"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8"
  }
}
